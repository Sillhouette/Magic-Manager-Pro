<h3>Edit <%=@card.name%>: </h3>

<form method="post" action="/magic_cards/<%=@card.slug%>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <p>Card Name: <input type="text" name="name" value="<%=@card.name%>"></p>
  <p>Manna Cost: <input type="text" name="cost" value="<%=@card.manna_cost%>"> Example: 2 Red 1 Colorless = 1RR</p>
  <p>Value: $<input type="text" name="value" value="<%=@card.value%>"></p>
  <p>Quantity: <input type="number" name="quantity" value="<%=@card.quantity%>"></p>

<h4>Quality:</h4>
  <%MagicCard.qualities.each do |quality|%>
    <input type="radio" name="card[quality]" value="<%=quality%>" <%='checked' if @card.quality.include?(quality) %>> <%="#{quality}"%> </input>
  <%end%>

<h4>Foil:</h4>
  <input type="radio" name="card[foil]" value=true> <%="Yes"%> </input>
  <input type="radio" name="card[foil]" value=false> <%="No"%> </input>

<h4>Color(s):</h4>
  <%MagicCard.colors.each do |color|%>
    <input type="checkbox" name="card[color]" value="<%=color%>" <%='checked' if @card.color.include?(color) %>> <%="#{color}"%> </input>
  <%end%>

  <h4>Super Type(s):</h4>
    <%MagicCard.super_types.each do |super_type|%>
      <input type="checkbox" name="card[super_type]" value="<%=super_type%>" <%='checked' if @card.super_type.include?(super_type) %>> <%="#{super_type}"%> </input>
    <%end%>

  <h4>Type(s):</h4>
    <%MagicCard.types.each do |type|%>
      <input type="checkbox" name="card[type]" value="<%=type%>" <%='checked' if @card.type.include?(type) %>> <%="#{type}"%> </input>
    <%end%>

  <h4>Rarity:</h4>
    <%MagicCard.rarities.each do |rarity|%>
      <input type="radio" name="card[rarity]" value="<%=rarity%>" <%='checked' if @card.rarity.include?(rarity) %>"> <%="#{rarity}"%> </input>
    <%end%>

  <h4>Set: </h4>
  <select>
    <%MagicCard.sets.each do |set|%>
    <option value="<%=set%>" name="card[set]" <%='selected' if @card.set == set %>><%="#{set}"%></option>
    <%end%>
  </select>

  </br>
  </br>

  <input type="submit" value="Edit Card">
</form>
