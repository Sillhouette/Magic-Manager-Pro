<h1> <%=@card.name%>: </h1>

<form action="/cards/<%=@card.slug%>/edit" method="GET">

  <p>Manna Cost: <%=@card.manna_cost%></p>
  <p>Value: $<%=@card.value%></p>
  <p>Quantity: <%=@card.quantity%></p>
  <p>Quality: <%=@card.quality%></p>
  <p>Foil: <%=@card.foil%></p>
  <p>Color: <%=@card.color%></p>
  <p>Super Type: <%=@card.super_types%></p>
  <p>Types:<%=@card.types%></p>
  <p>Rarity: <%=@card.rarity%></p>
  <p>Set: <%=@card.set%></p>

  <input type="submit" value="Edit Card">
</form>

<form method="post" action="/cards/<%=@card.slug%>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">

  <input type="submit" value="Delete Deck">
</form>
